{
  "manifest_version": 3,
  "name": "Claw Redactor (Local)",
  "version": "0.1.0",
  "description": "Local-first redaction for images and screenshots.",
  "action": {
    "default_title": "Claw Redactor",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
