{
  "manifest_version": 3,
  "name": "BlurBar",
  "version": "0.2.0",
  "description": "Local-only redaction for images and screenshots (no uploads, no tracking).",
  "action": {
    "default_title": "Claw Redactor",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
